    { device = "/dev/disk/by-uuid/15d0b22e-decb-4c41-b844-a0f6df0330a2";
      fsType = "btrfs";
      options = [ "compress=zstd,ssd,noatime,space_cache=v2,subvol=@home" ];
    };

  fileSystems."/boot" =
    { device = "/dev/disk/by-uuid/8620-32A3";
      fsType = "vfat";
    };

  swapDevices = [ ];

